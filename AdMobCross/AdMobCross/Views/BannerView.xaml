<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="AdMobCross.Views.BannerView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AdMobCross.Controls"
    xmlns:local="clr-namespace:AdMobCross"
    Title="Banner">
    <ContentPage.Content>
        <Grid Margin="0,0,0,40" RowDefinitions="*,Auto">
            <controls:AdBannerView
                Grid.Row="1"
                AdBannerSize="LargeBanner"
                AdId="{x:Static local:Constants.AdBannerId}"
                HorizontalOptions="Center" />
        </Grid>
    </ContentPage.Content>
</ContentPage>
